<h2>Detalles de la Reserva</h2>
<p><strong>Cliente:</strong> @Model.NroDocumentoCliente</p>
<p><strong>Estado:</strong> @Model.IdEstadoReservaNavigation.NombreEstadoReserva</p>
<p><strong>Método de Pago:</strong> @Model.MetodoPagoNavigation.NomMetodoPago</p>
<p><strong>Fecha de Reserva:</strong> @Model.FechaReserva.ToString("dd/MM/yyyy")</p>
<p><strong>Monto Total:</strong> @Model.MontoTotal</p>

<h3>Paquetes Asociados</h3>
<table>
    <thead>
        <tr>
            <th>Nombre Paquete</th>
            <th>Costo</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paquete in Model.DetalleReservaPaquetes)
        {
            <tr>
                <td>@paquete.IdPaqueteNavigation.NomPaquete</td>
                <td>@paquete.IdPaqueteNavigation.Precio</td>
                <td>@paquete.IdPaqueteNavigation.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

<h3>Servicios Asociados</h3>
<table>
    <thead>
        <tr>
            <th>Nombre Servicio</th>
            <th>Costo</th>
            <th>Cantidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var servicio in Model.DetalleReservaServicios)
        {
            <tr>
                <td>@servicio.IdServicioNavigation.NomServicio</td>
                <td>@servicio.IdServicioNavigation.Precio</td>
                <td>@servicio.IdServicioNavigation.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

