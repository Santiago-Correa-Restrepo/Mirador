@model IEnumerable<OctavaPrueba.Models.ViewModels.CrearReservaVM>

@{
    ViewData["Title"] = "Lista de Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Lista de Reservas</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Método de Pago</th>
            <th>Estado</th>
            <th>Fecha de Reserva</th>
            <th>Monto Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr>
                <td>@reserva.NroDocumentoCliente</td>
                <td>@reserva.MetodoPago</td>
                <td>@reserva.EstadosReserva</td>
                <td>@reserva.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@reserva.MontoTotal</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@reserva.IdReserva">Edit</a> |
                    <a asp-action="Details" asp-route-id="@reserva.IdReserva">Details</a> |

                    <!-- Formulario para eliminar la reserva -->
                    <form asp-action="Delete" asp-route-id="@reserva.IdReserva" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-link text-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar esta reserva?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>